---
import ExperienceItem from "./ExperienceItem.astro";

const EXPERIENCE = [
    {
        date: "Febrero 2024 - Julio 2024",
        title: "Prácticas en desarrollo web backend - Capgemini Engineering",
        description:
            "Desarrollador del servidor de la aplicación web, así como de la creación de una API RESTful para la gestión de usuarios y servicios a través de tecnologías como Nest.js, Docker y Redis.",
        link: "https://www.capgemini.com/es-es/sobre-nosotros/quienes-somos/nuestras-marcas/capgemini-engineering/",
    },
];
---

<ol class="relative border-s border-gray-200 ml-3">
    {
        EXPERIENCE.map((experience) => (
            <li class="mb-10 ms-4">
                <ExperienceItem {...experience} />
            </li>
        ))
    }
</ol>
